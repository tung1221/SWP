@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}
@model List<SubCategory>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing" style="background: white">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>Add / Manage Product </h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area add-manage-product-2">
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="card card-default">
                            <div class="card-heading"><h2 class="card-title"><span>Create Product</span></h2></div>
                            <div class="card-body">
                                <div class="card-body">
                                    <form class="form-horizontal" enctype="multipart/form-data" asp-action="CreateProduct" method="post">
                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <label class="col-md-4">Name :</label>
                                                <div class="col-md-8">
                                                    <input class="form-control" name="ProductName" type="text" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <label class="col-md-4">Description :</label>
                                                <div class="col-md-8">
                                                    <textarea rows="4" cols="5" name="ProductDescription" class="form-control" required></textarea>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <label class="col-md-4">Category :</label>
                                                <div class="col-md-8">
                                                    <select class="form-control form-custom mb-4" name="SubCategoryID" required>

                                                        @foreach (var subCategory in Model)
                                                        {
                                                            <option value="@subCategory.SubCategoryId">@subCategory.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <label class="col-md-4" for="DateUp">Date Updated</label>
                                                <div class="col-md-8">
                                                    <input type="date" id="DateUp" name="ImportDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                                </div>

                                            </div>

                                        </div>
                                        @*<div class="form-group mb-4">
                                        <div class="row">
                                        <label class="col-md-4">Brand :</label>
                                        <div class="col-md-8">
                                        <select class="form-control form-custom" name="brand">
                                        <option value="">Select a Brand</option>
                                        <option value="brand1">Microsoft</option>
                                        <option value="brand2">Samsung</option>
                                        <option value="brand3">HP</option>
                                        <option value="brand4">Ford</option>
                                        </select>
                                        </div>
                                        </div>
                                        </div>*@
                                        @*<div class="form-group mb-4">
                                        <div class="row">
                                        <label class="col-md-4">Color :</label>
                                        <div class="col-md-3 align">
                                        <input class="form-control" name="sku" type="color">
                                        </div>
                                        </div>
                                        </div>*@
                                        @*<div class="form-group mb-4">
                                        <div class="row">
                                        <label class="col-md-4">Size :</label>
                                        <div class="col-md-8">
                                        <select class="form-control form-custom" name="size">
                                        <option value="XS">XS</option>
                                        <option value="S">S</option>
                                        <option value="M">M</option>
                                        <option value="L">L</option>
                                        <option value="XL">XL</option>
                                        <option value="XXL">XXL</option>
                                        </select>
                                        </div>
                                        </div>
                                        </div>*@
                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <label class="col-md-4">Discount :</label>
                                                <div class="col-md-8">
                                                    <input class="form-control" name="discount" type="number" min="0" max="100" required>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <label class="col-md-4">Price :</label>
                                                <div class="col-md-8">
                                                    <input class="form-control" name="ProductPrice" type="number" min="0" step="0.01" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <label class="col-md-4">Image :</label>
                                                <div class="col-md-6">
                                                    <input class="form-control-file" name="ImageUrl" type="file" id="FLFrontImage"
                                                           onchange="document.getElementById('FrontImagePrv').src = window.URL.createObjectURL(this.files[0])">

                                                </div>

                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <img class="align-content-md-center" id="FrontImagePrv" src="" alt="imagePrv" width="400"
                                                     height="300">
                                            </div>

                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <label class="col-md-4">Available :</label>
                                                <div class="col-md-8">
                                                    <select class="form-control form-custom" name="IsAvailble">

                                                        <option value="true">enable</option>
                                                        <option value="false">disable</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <label class="col-md-4">Home Status :</label>
                                                <div class="col-md-8">
                                                    <select class="form-control form-custom" name="HomeStatus">

                                                        <option value="true">enable</option>
                                                        <option value="false">disable</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group mb-4">
                                            <div class="row">
                                                <div class="mx-auto">
                                                    <input class="btn btn-space btn-primary" type="submit" value="Create">
                                                    <a href="/Admin/DashProduct" class="btn btn-space btn-primary" style="color: white"><i class="fas fa-arrow-right"></i>Back</a>
                                                </div>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

