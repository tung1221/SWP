@model List<Feedback>

@{
	Layout = "~/Views/Shared/_DashLayout.cshtml";
}

@if (Model == null)
{
	<p>No bills found.</p>
}
else
{

	<div class="card">
		<div class="card-body">
			<div class="d-lg-flex align-items-center mb-4 gap-3">
				

			</div>
			<div class="ms-auto text-end">
				<a href="#" class="btn btn-primary radius-30 mt-2 mt-lg-0">
					<i class="bx bxs-plus-square"></i>Confirm All
				</a>
			</div>

			<div class="table-responsive">
				<table class="table mb-0">
					<thead class="table-light">
						<tr>
							<th>Id</th>
							<th>UserName</th>
							<th>Status</th>
							<th>Date</th>
							<th>Title</th>
							<th>Detail</th>
							<th>Delete</th>
							<th>Confirm</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var feedback in Model)
						{
	@*						if (feedback.FeedbackStatus == "0")
							{*@
								<tr>
									<td>
										<div class="d-flex align-items-center">
											<div>
												<input class="form-check-input me-3" type="checkbox" value="" aria-label="...">
											</div>
											<div class="ms-2">
												<h6 class="mb-0 font-14">@feedback.FeedbackId</h6>
											</div>
										</div>
									</td>
									<td>@feedback.UserId</td>
									<td>
										@if (feedback.FeedbackStatus == "0")
										{
											<div class="badge rounded-pill text-success bg-light-success p-2 text-uppercase px-3">
												<i class='bx bxs-circle me-1'></i>Unconfimred
											</div>
										}
									@if (feedback.FeedbackStatus == "1")
									{
										<div class="badge rounded-pill text-success bg-light-success p-2 text-uppercase px-3">
											<i class='bx bxs-circle me-1'></i>Confimred
										</div>
									}

									</td>
									<td>@feedback.FeedbackDate</td>
									<td>@feedback.FeedbackTitle</td>
									<td>@feedback.FeedbackDetail</td>

									<td><a href="/Admin/deleteFb/?feedbackId=@feedback.FeedbackId" type="button" class="btn btn-primary btn-sm radius-30 px-4">Delete</a></td>
									
									<td><a href="/Admin/confirmFeedback/?feedbackId=@feedback.FeedbackId" type="button" class="btn btn-primary btn-sm radius-30 px-4">Confirm</a></td>
								</tr>
	@*						}*@
						}

					</tbody>
				</table>


			</div>

		</div>
	</div>

}