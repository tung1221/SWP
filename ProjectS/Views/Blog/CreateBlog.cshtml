@model Blog

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<form action="/Blog/CreateBlog" method="post">
    <div class="container" style="background: white;border-radius:5px">
        <div class="row">
            <div class="col-md-6"><br />
                <div class="form-group">
                    <label for="HomeStatus">Home Status</label>
                    <select id="HomeStatus" name="HomeStatus" class="form-control" style="border-radius:5px">
                        <option value="true">Enable</option>
                        <option value="false">Disable</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="DateUp">Date Updated</label>
                    <input type="datetime" id="DateUp" name="DateUp" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" style="border-radius:5px" />
                </div>
            </div>

            <div class="col-md-6"><br />
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="Name" class="form-control" style="border-radius:5px" />
                </div>

                <div class="form-check">
                    <br /><br />
                    <input class="form-check-input" type="checkbox" id="IsCollection" name="IsCollection" value="true" />
                    <label class="form-check-label" for="IsCollection">Is Collection</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="Content">Content</label>
            <textarea id="Content" name="Content" class="form-control" style="border-radius:5px"></textarea>
        </div>

        <div class="form-group">
            <label for="Content2">Second Content</label>
            <textarea id="Content2" name="Content2" class="form-control" style="border-radius:5px"></textarea>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/Blog/ViewBlog" class="btn btn-secondary">Cancel</a>
        
            @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger mt-3">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div><br />
    </div>
</form>


